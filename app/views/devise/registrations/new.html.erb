<% @body_id = "login" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-2'}) do |f| %>
  <%= devise_error_messages! %>
  <h1><span class="log-in">Registration closed.</span></h1>
  
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
  </p>
  
  <p>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'you@example.com'%>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
  </p>

  <p>
  </p>
  <div class="signin" align="center">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
